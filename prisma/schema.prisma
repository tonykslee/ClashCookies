generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model PlayerSnapshot {
  id                 Int      @id @default(autoincrement())
  tag                String
  name               String
  clanTag            String
  trophies           Int
  donations          Int
  warStars           Int
  builderTrophies    Int
  capitalGold        Int
  createdAt          DateTime @default(now())

  @@index([tag, createdAt])
}
